                              <Text fx:id="lineSpacingText" strokeType="OUTSIDE" strokeWidth="0.0" text="Line spacing">
                                 <font>
                                    <Font name="Calisto MT" size="12.0" />
                                 </font>
                              </Text>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
            </content>
          </TitledPane>
          <TitledPane fx:id="valuePane" animated="false" text="Calculated values">
               <content>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <GridPane>
                                <columnConstraints>
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                </columnConstraints>
                                <rowConstraints>
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                                 <children>
                                    <Label text="Determinant" />
                                    <Button fx:id="detInfoBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="85.0" text="Determinant">
                                       <graphic>
                                          <ImageView fx:id="infoBtn" fitHeight="39.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                                             <image>
                                                <Image url="@../img/infoBtn.png" />
                                             </image>
                                          </ImageView>
                                       </graphic>
                                       <font>
                                          <Font size="9.0" />
                                       </font>
                                    </Button>
                                    <TextField fx:id="fieldDet" GridPane.columnIndex="1" />
                                 </children>
                              </GridPane>
                           </children>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <GridPane alignment="BASELINE_CENTER" prefHeight="60.0">
                                 <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                 </columnConstraints>
                                 <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                 </rowConstraints>
                                 <children>
                                    <TextField fx:id="transD" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                                    <TextField fx:id="transA" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    <TextField fx:id="transB" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                    <TextField fx:id="transC" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    <Label prefHeight="17.0" prefWidth="59.0" text="Transpose" />
                                 </children>
                              </GridPane>
                           </children>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <GridPane alignment="BASELINE_CENTER" prefHeight="60.0">
                                 <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                 </columnConstraints>
                                 <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                 </rowConstraints>
                                 <children>
                                    <TextField fx:id="invD" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                                    <TextField fx:id="invA" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    <TextField fx:id="invB" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                    <TextField fx:id="invC" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    <Label text="Inverse" />
                                    <Button fx:id="resetBtn" mnemonicParsing="false" GridPane.rowIndex="2">
                                       <graphic>
                                          <ImageView fx:id="resetIcon" fitHeight="23.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                                             <image>
                                                <Image url="@../img/resetBtn.png" />
                                             </image>
                                          </ImageView>
                                       </graphic>
                                    </Button>
                                 </children>
                              </GridPane>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
          </TitledPane>
            <TitledPane fx:id="controlPane" animated="false" layoutX="10.0" layoutY="10.0" text="Animation control">
               <content>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                     <children>
                        <Button fx:id="btnGenerate" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Generate simulation" />
                        <Button fx:id="btnReset" mnemonicParsing="false" text="Reset" />
                        <Button fx:id="btnAbout" mnemonicParsing="false" text="About" />
                     </children>
                  </VBox>
               </content></TitledPane>
        </panes>
      </Accordion>
   </right>
   <center>
      <Pane fx:id="graphPane" prefHeight="400.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <Canvas fx:id="canvasPane" height="400.0" width="400.0" />
         </children></Pane>
   </center>
   <top>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
          <Button fx:id="exportButton" mnemonicParsing="false" text="Export" />
            <CheckBox fx:id="showGrid" mnemonicParsing="false" text="Show initial grid" translateX="15.0" />
        </items>
      </ToolBar>
   </top>
